<%- include('partials/header', { title: 'Login' }) %>

<div class="card" style="max-width: 500px; margin: 0 auto;">
    <h2 style="text-align: center; margin-bottom: 2rem;">Login with Bitcoin Private Key</h2>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
    <% } %>
    
    <form action="/login" method="POST">
        <div class="form-group">
            <label for="privateKey">Private Key (Hex Format)</label>
            <input type="password" id="privateKey" name="privateKey" 
                   placeholder="Enter your 64-character hex private key" 
                   pattern="[0-9a-fA-F]{64}" 
                   maxlength="64"
                   required>
            <small style="color: #666; display: block; margin-top: 0.5rem;">
                Your private key is never stored on our servers
            </small>
        </div>
        
        <button type="submit" class="btn" style="width: 100%;">Login</button>
    </form>
    
    <div style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid #ddd;">
        <p style="text-align: center; margin-bottom: 1rem;">
            Don't have a Bitcoin wallet? <a href="/create-wallet">Create one here</a>
        </p>
        <p style="text-align: center; font-size: 0.875rem; color: #666;">
            Or import an existing Bitcoin private key to access your wallet
        </p>
    </div>
</div>

<div class="card" style="max-width: 500px; margin: 2rem auto;">
    <h3>Security Notice</h3>
    <ul style="color: #666; font-size: 0.875rem;">
        <li>Your private key gives full access to your Bitcoin wallet</li>
        <li>Never share your private key with anyone</li>
        <li>We derive your Bitcoin address from your private key for authentication</li>
        <li>Private keys are not stored on our servers</li>
    </ul>
</div>

<%- include('partials/footer') %>